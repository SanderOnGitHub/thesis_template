\RequirePackage{kvoptions}
\RequirePackage{ifthen}
\RequirePackage{iflang}


\PassOptionsToPackage{rgb}{xcolor}
\RequirePackage{xcolor}
\RequirePackage[absolute]{textpos}
\RequirePackage{graphicx}

\SetupKeyvalOptions{
  family=cover,
  prefix=cover@
}

\DeclareBoolOption{print}
\ProcessKeyvalOptions{cover}

\def\ThesisTitle#1#2{\def\deTitle{#1}\def\enTitle{#2}}

\def\firstExaminer#1{\def\@firstExaminer{#1}}
\def\secondExaminer#1{\def\@secondExaminer{#1}}
\def\supervisor#1{\def\@supervisor{#1}}

\def\ThesisType#1{\def\@ThesisType{#1}}
\def\DegreeProgram#1{\def\@DegreeProgram{#1}}
\def\Company#1{\def\@Company{#1}}
\Company{} % if no cooperation

\def\deUniversityName{Hochschule f\"ur Angewandte Wissenschaften Hamburg}
\def\enUniversityName{Hamburg University of Applied Sciences}

\def\deFacultyName{Fakult\"at Technik und Informatik}
\def\enFacultyName{Faculty of Engineering and Computer Science}

\def\deDepartmentName{Department Maschinenbau und Produktion}
\def\enDepartmentName{Department of Mechanical Engineering and Production Management}


\renewcommand*{\maketitle}{
  \IfLanguageName{ngerman}{
    \title{\deTitle}
    \ifthenelse{\equal{\@ThesisType}{MA}}{
      \def\@ThesisTypeLong{Masterarbeit}
      \def\ExaminationType{Masterpr\"ufung}
    }{\def\ExaminationType{Bachelor\"ufung}}
  }{
    \title{\enTitle}
  }%\title

  %% The Cover Page
  \begin{titlepage}%
  \begingroup
  \thispagestyle{empty}%
  \enlargethispage{\footskip}%
  \setlength{\parindent}{0em} % remove indent
  \sffamily % the title page in sans serif

  \ifthenelse{\boolean{cover@print}}{
    \colorlet{HAWBannerColor}{white}
  }{
    \definecolor{HAWBannerColor}{rgb}{0.00,0.78,0.54}
  }

  %% use HAW for online version, nothing if the file is to be printed
  \begin{textblock*}{2cm}(10cm,1cm)
    \begin{minipage}[r]{\textwidth}%
      \ifthenelse{\boolean{cover@print}}{ % hide logo if printer is true
        \relax
      }{
        \includegraphics[width=10cm]{HAW_logo}%
      }
    \end{minipage}%
  \end{textblock*}

  %% color bar
  \begin{textblock*}{10cm}(0cm,9cm)
    \colorbox{HAWBannerColor}{%
      %% use a minipage that is the size of the colored banner
      %% center the minipage
      \begin{minipage}[l][10cm][t]{\paperwidth}%
        %% put the box on the right side
        \hspace*{0.175\textwidth}
        \parbox[t]{0.7\textwidth}{%
          \raggedleft  
          \vspace{2.5cm}
          \bfseries\fontsize{20}{20}\selectfont {\@ThesisTypeLong}

          \vspace{1.8cm}
          \fontsize{14}{14}\selectfont \@author

          \vspace{.5cm}
          \fontsize{18}{20}\selectfont
          \@title
        }%
      \end{minipage}%
    }
  \end{textblock*}
  %% HAW information
  \begin{textblock*}{17.4cm}(2cm,25.9cm)
    \begin{minipage}[c]{17.4cm}
      \centering
      \parbox[t]{0.49\textwidth}{%
        \textsf{\itshape%
        \deFacultyName \\
        \deDepartmentName}
      }\hfill
      \begin{minipage}[t]{0.49\textwidth}%
        \raggedleft\textsf{\itshape
        \enFacultyName
        \enDepartmentName}
      \end{minipage}
    \end{minipage}
  \end{textblock*}
  \null\newpage
  \endgroup
  \end{titlepage}

  %% The Title Page
  \begingroup
    \enlargethispage{\footskip}
    \thispagestyle{empty}
    \setlength{\parindent}{0em} %% remove indent
    \sffamily

    {\centering\vspace*{0.75cm}
      \bfseries\fontsize{18}{24}\selectfont {\@author}\\
      \bigskip
      \bfseries\fontsize{18}{24}\selectfont {\@title}\\%
    }
    \vfill
      \@ThesisTypeLong\ eingereicht im Rahmen der \ExaminationType\\
      \par im Studiengang \@DegreeProgram\\
      am \deDepartmentName\\
      der \deFacultyName\\
      der \deUniversityName\\

    \ifthenelse{\NOT\equal{\@Company}{}}{
      \par in Zusammenarbeit mit: \\ \@Company
    }{}

    \par Erstpr\"ufer*In: \@firstExaminer \\
    Zweitpr\"ufer*In : \@secondExaminer \\
    \par Industrielle Betreuer*In: \@supervisor \\
    \par Abgabedatum: \@date
  \endgroup
}